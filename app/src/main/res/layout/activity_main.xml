<!-- res/layout/activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#f8e7df"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ОБЕРІТЬ РІВЕНЬ СКЛАДНОСТІ"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_marginBottom="32dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="32dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#d4e8dc"
            android:padding="16dp">

            <ImageView
                android:id="@+id/novice_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/novice"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="НОВАЧОК"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#7d9d88" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#f7dcb5"
            android:padding="16dp">

            <ImageView
                android:id="@+id/intermediate_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/intermediate"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="СЕРЕДНІЙ"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#e2b670" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#f3c0a3"
            android:padding="16dp">

            <ImageView
                android:id="@+id/expert_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/expert"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ЕКСПЕРТ"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#d65a47" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
